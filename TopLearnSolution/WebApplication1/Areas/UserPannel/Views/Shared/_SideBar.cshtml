@using Toplearn.ApplicationService.Contract.Convertor;
@using Toplearn.ApplicationService.Contract.IService;
@inject IUserPannelService userPannelService;
@{
    var user = userPannelService.GetSideBarUserInfo(User.Identity.Name);
}
<div class="col-md-3 col-sm-4 col-xs-12">
    <aside>
        <div class="avatar-layer">
            <div class="img-layer">
                <a href="" class="change-image"><i class="zmdi zmdi-edit"></i></a>
                <img src="/UserAvatar/@user.ImageName">
            </div>
            <div class="detail">
                <span> @user.UserName </span>
                <span> عضویت : @user.RegisterUserDate.ToShamsi() </span>
            </div>
        </div>

        <section>
            <header><h3> میز کار </h3></header>
            <div class="inner">
                <ul>
                    <li><a href="/UserPanel"> مشاهده حساب کابری </a></li>
                    <li><a href="/UserPannel/Edit"> ویرایش حساب کابری </a></li>
                    <li><a href="/UserPannel/ChangePassword"> تغییر رمز عبور </a></li>
                    <li><a href="/UserPannel/UserWallet"> مشاهده کیف پول  </a></li>
                    <li><a href="/UserPannel/ShowOrder"> مشاهده فاکتور  </a></li>
                    <li><a href="/Logout"> خروج از حساب کاربری </a></li>
                </ul>
            </div>
        </section>
    </aside>
</div>