@page
@model WebApplication1.Pages.LoginUserModel
@{
}
<main class="client-page">
    <div class="container-content">

        <header><h2> ورود به سایت </h2></header>

        <div class="form-layer">
            @if (ViewData["EditProfile"] !=null)
            {
                <div class="alert alert-warning">
                    بدلیل ویرایش پروفایل و بارگزاری مجدد اطلاعات لطفا مجدد لاگین کنید
                </div>
            }
            <form asp-action="LoginUser" method="post">

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input type="text" class="form-control" placeholder="ایمیل" aria-describedby="email-address" asp-for="dto.Email">
                </div>

                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input type="text" asp-for=dto.Password class="form-control" placeholder="رمز عبور " aria-describedby="password">
                </div>
                <div class="link">
                    <a href="/ForegetPasswordEmail"> <i class="zmdi zmdi-lock"></i> رمز عبور خود را فراموش کرده ام !</a>
                    <a href="/registercontroller"> <i class="zmdi zmdi-account"></i> عضویت در سایت </a>
                </div>
                <button class="btn btn-success"> ورود به سایت </button>
            </form>
        </div>

    </div>
</main>
@section Scripts{
    @if (TempData["success"] != null)
    {
        <script>
            Swal.fire({
                icon: "success",
                title: " ورود با موفقیت انجام شد",
            });
            setInterval(function () {
                window.location.href = "/Index",
                    50000
            });
        </script>
    }
    @if (TempData["ErrorLogin"] != null)
    {
        <script>
            Swal.fire({
                icon: "error",
                title: "اطلاعات وارد شده جهت ورود به سایت صحیح نیست",
            });
            setInterval(function () {
                    50000
            });
        </script>
    }
}