@page "{id}"
@model WebApplication1.Pages.Admin.Episod.CreateEpisodModel
@{
}
<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="dto.CourseId" />
        <div class="col-md-12">
            <h2>اطلاعات دوره</h2>
            <hr />
            <div class="form-group">
                <label>عنوان بخش</label>
                <input type="text" asp-for="dto.Title" class="form-control">
                <span asp-validation-for="dto.Title"></span>
            </div>
            <div class="form-group">
                <label>زمان بخش</label>
                <input type="datetime" asp-for="dto.Time" class="form-control">
                <span asp-validation-for="dto.Time"></span>
            </div>
            <div class="form-group">
                <label>فایل بخش</label>
                <input type="file" asp-for="dto.UploadEpisod">
                <p class="text-danger">فایل اجباری است</p>
                @if (ViewData["IsExistFile"] != null)
                {
                    <div class="alert alert-danger">
                        نام فایل معتبر نیست ، لطفا تغییر دهید
                    </div>
                }
                <span asp-validation-for="dto.UploadEpisod"></span>
            </div>
            <div class="form-group">
                <label>دسترسی</label>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" asp-for="dto.IsFree">
                        رایگان است
                    </label>
                </div>
                <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
            </div>
        </div>
    </form>
</div>