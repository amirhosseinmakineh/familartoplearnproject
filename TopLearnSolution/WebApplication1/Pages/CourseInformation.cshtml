<style>
    .term-description img {
        width: 800px;
        height: 600px;
        border-radius: 20px;
    }

    .term-content header h1 {
        font-weight: bold;
        font-size: 25px;
        color: black;
        margin: 10px 0;
    }

    .term-content section p {
        text-align: justify;
        font-size: 15px;
        line-height: 30px;
        margin: 20px 0;
    }

    article {
        background-color: wheat;
        border-radius: 20px;
        padding: 15px 15px;
        display: flex;
        justify-content: center;
        margin: 10px 0;
    }
</style>
@section Scripts{
    @if (TempData["NotLogin"] != null)
    {
        <script>
            Swal.fire({
                icon: "error",
                title: "لطفا در سایت وارد شوید",
            });
            setInterval(function () {
                10000
                window.location.href = "/LoginUser";
            });
        </script>
    }
    @if (TempData["NotLogin"] != null)
    {
        <script>
            Swal.fire({
                icon: "error",
                title: "لطفا در سایت وارد شوید",
            });
            setInterval(function () {
                100000
                window.location.href = "/LoginUser";
            });
        </script>
    }
    @if (TempData["NotCourseInOrder"] !=null)
    {
        <script>
            Swal.fire({
                icon: "error",
                title: "دوره مورد نظر شما در لیست فاکتور های شما وجود ندارد,لطفا دوره را به فاکتور های خود اضافه کنید",
            });
        </script>
    }
    @if (TempData["NotPay"] != null)
    {
        <script>
            Swal.fire({
                icon: "error",
                title: "جهت دانلود ویدیو باید فاکتور مربوط به این دوره را پرداخت کنید",
            });
        </script>
    }
}
<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#"> تاپ لرن </a></li>
